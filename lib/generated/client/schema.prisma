generator client {
  provider     = "prisma-client-js" // Change this!
  output       = "../lib/generated/client" // And this!
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

// prisma/schema.prisma

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String
  role          Role      @default(USER)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum Role {
  USER
  ADMIN
}
